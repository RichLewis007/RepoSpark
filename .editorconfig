# EditorConfig: https://editorconfig.org
# EditorConfig helps maintain consistent coding styles
# top-most EditorConfig file
root = true

# Generic settings for all files
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript
[*.js]
indent_style = space
indent_size = 2

# Python
[*.py]
indent_style = space
indent_size = 4

# Markdown
[*.md]
trim_trailing_whitespace = false

# YAML/JSON
[*.{yml,yaml,json}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf
insert_final_newline = true

# HTML/CSS
[*.{html,css}]
indent_style = space
indent_size = 2

